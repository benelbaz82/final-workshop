# ===========================================
# Status Page Environment Configuration
# ===========================================

# Database Configuration
POSTGRES_DB=statuspage
POSTGRES_USER=statuspage
POSTGRES_PASSWORD=your_strong_password

# PostgreSQL Connection (used by Django services)
PGPASSWORD=your_strong_password

# Django Superuser Configuration
SUPERUSER_USERNAME=admin
SUPERUSER_EMAIL=admin@example.com
SUPERUSER_PASSWORD=admin123

# Development Settings
DEVELOPER=True

# Service Names (used by different services)
SERVICE_NAME_WEB=web
SERVICE_NAME_SCHEDULER=scheduler
SERVICE_NAME_WORKER=worker

# ===========================================
# CPU Monitor Configuration
# ===========================================

# Monitor Settings
METRIC_ID=1
API_TOKEN=your_api_token_here
API_URL=https://your-status-page.com/api/metrics/metric-points/
INTERVAL=60

# ===========================================
# EC2 Monitor Configuration
# ===========================================

# AWS Configuration
INSTANCE_ID=i-your-ec2-instance-id
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
AWS_REGION=us-east-1

# Status Page API for EC2
EC2_METRIC_ID=2

# WhatsApp Server Configuration
WHATSAPP_URL=https://your-whatsapp-server.com/

# Monitor Interval (seconds) - for checking when not running
MONITOR_INTERVAL=60